<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Bottom container -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/placeholder_pokemon"
                android:textAlignment="center"
                android:textColor="@color/grayscaleDark"
                style="@style/Body3"/>
        </LinearLayout>

        <!-- Banner -->
        <ImageView
            android:id="@+id/banner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/placeholder_pokemon"
            android:src="@drawable/silhouette"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tag text -->
        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/placeholder_tag"
            android:textColor="@color/grayscaleMedium"
            style="@style/Caption"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tag icon -->
        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@string/placeholder_tag"
            android:src="@drawable/tag"
            app:tint="@color/grayscaleMedium"
            app:layout_constraintTop_toTopOf="@id/tag"
            app:layout_constraintEnd_toStartOf="@id/tag" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
