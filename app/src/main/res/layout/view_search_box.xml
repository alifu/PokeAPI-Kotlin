<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_margin="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/search_image"
            android:contentDescription="@string/placeholder_search"
            android:src="@drawable/search"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/primary" />

        <EditText
            android:id="@+id/search_text"
            app:layout_constraintLeft_toRightOf="@+id/search_image"
            app:layout_constraintRight_toLeftOf="@+id/clear_button"
            android:layout_marginHorizontal="4dp"
            style="@style/Body3"
            android:textColor="@color/grayscaleMedium"
            android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="0dp"/>

        <com.appwork.pokeapi_kotlin.reuseable.ImageButtonView
            android:id="@+id/clear_button"
            app:buttonImage="@drawable/close"
            app:buttonTint="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:clickable="false"
            android:layout_marginEnd="8dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>